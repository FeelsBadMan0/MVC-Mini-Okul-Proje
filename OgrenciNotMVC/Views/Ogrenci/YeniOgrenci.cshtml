@model OgrenciNotMVC.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form class="form-group" method="post">
        <div>
            <label>Öğrenci Adı</label>
            <input type="text" name="OGRAD" class="form-control" />
        </div>
        <div style="margin-top:10px">
            <label>Öğrenci Soyadı</label>
            <input type="text" name="OGRSOYAD" class="form-control" />
        </div>
        <div style="margin-top:10px">
            <label>Öğrenci Fotoğraf</label>
            <input type="text" name="OGRFOTOGRAF" class="form-control" />
        </div>
        <div style="margin-top:10px">
            <label>Öğrenci Cinsiyet</label>
            <input type="text" name="OGRCINSIYET" class="form-control" />
        </div>
        <div style="margin-top:10px">
            <label>Öğrenci Kulüp</label>
            @Html.DropDownListFor(m => m.TBLKULUPLER.KULUPID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
        <div style="margin-top:10px">
            <button class="btn btn-info">Öğrenci Ekle</button>
        </div>
    </form>
</div>

